{
  "name" : "Webpage Mascot \"mOmonga\"",
  "version" : "1.0.1",
  "manifest_version" : 2,

  "description" : "Webpage Mascot \"mOmonga\"",
  "icons" : {
     "48" : "resources/icon48.png",
     "128" : "resources/icon128.png"
  },

  "background" : {
    "scripts" : [
      "includes/background.js"
    ], 
    "persistent" : false
  }, 

  "content_scripts" : [
    {
      "js" : [
        "includes/content.js"
      ],
      "matches" : [
        "<all_urls>"
      ]
    }
  ],
  
  "permissions" : [
    "contextMenus", 
    "http://*/*", 
    "alarms"
  ], 

  "web_accessible_resources" : [
    "resources/momonga120.png"
  ]
}
